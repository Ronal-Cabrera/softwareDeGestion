@model softwareDeGestión.Models.Vistas.Medicamentos

@{
    ViewData["Title"] = "Nuevo Medicamento";
}

<br />
<br />

<!-- Cuerpo del modal con el formulario -->
<div class="container shadow p-5 bg-white">

    <h3>Nuevo Medicamento</h3>

    <form asp-controller="DetallesVistas" asp-action="Guardarme" method="post">
        <div class="mb-3">
            <label asp-for="NombreMedicamento" class="form-label">Nombre</label>
            <input asp-for="NombreMedicamento" class="form-control" placeholder="Ingrese nombre." required>
            <span asp-validation-for="NombreMedicamento" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DescripcionMedicamento" class="form-label">Descripcion Medicamento</label>
            <input asp-for="DescripcionMedicamento" class="form-control" placeholder="Ingrese Descripcion Medicamento." required>
            <span asp-validation-for="DescripcionMedicamento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="InstruccionesUso" class="form-label">Instrucciones Uso</label>
            <input asp-for="InstruccionesUso" class="form-control" placeholder="Ingrese Instrucciones" required>
            <span asp-validation-for="InstruccionesUso" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EfectosSecundarios" class="form-label">Efectos Secundarios</label>
            <input asp-for="EfectosSecundarios" class="form-control" placeholder="Ingrese Efectos Secundarios" required>
            <span asp-validation-for="EfectosSecundarios" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn bg-secondary float-end text-white" asp-controller="DetallesVistas" asp-action="Medicamentos">Regresar</a>
    </form>

</div>

