@model softwareDeGestión.Models.Usuarios.Usuario

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<br />
<br />
<!-- Cuerpo del modal con el formulario -->
<div class="container shadow p-5">
    <form asp-controller="Usuarios" asp-action="Guardarusu" method="post">
        <div class="mb-3">
            <label asp-for="nombre_usuario" class="form-label">Usuario</label>
            <input asp-for="nombre_usuario" class="form-control" placeholder="Ingrese los nombres">
            <span asp-validation-for="nombre_usuario" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="password_usuario" class="form-label">Contraseña</label>
            <input asp-for="password_usuario" class="form-control" placeholder="Ingrese los apellidos">
            <span asp-validation-for="password_usuario" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="estado_usuario" class="form-label">Estado</label>
            <input asp-for="estado_usuario" class="form-control" placeholder="Ingrese el teléfono">
            <span asp-validation-for="estado_usuario" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="rol_usuario" class="form-label">Rol</label>
            <input asp-for="rol_usuario" class="form-control" placeholder="Ingrese la dirección">
            <span asp-validation-for="rol_usuario" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
