@model softwareDeGestión.Models.Usuarios.Paciente

@{
    ViewData["Title"] = "Editar Empleado";
}

<br />
<br />

<!-- Cuerpo del modal con el formulario -->
<div class="container shadow p-5 bg-white">
    <h3 class="text-center">Editar Empleado</h3>
    <form asp-controller="Paciente" asp-action="Guardarupdatepaci" method="post">
        <input type="hidden" value="@ViewBag.MiArray[0][0]" asp-for="PacienteID" />
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombres</label>
            <input asp-for="Nombre" class="form-control" value="@ViewBag.MiArray[0][1]" placeholder="Ingrese los nombres">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Apellido" class="form-label">Apellidos</label>
            <input asp-for="Apellido" class="form-control" value="@ViewBag.MiArray[0][2]" placeholder="Ingrese los apellidos">
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Edad" class="form-label">Edad</label>
            <input asp-for="Edad" class="form-control" value="@ViewBag.MiArray[0][3]" placeholder="Ingrese la edad">
            <span asp-validation-for="Edad" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Genero" class="form-label">Genero</label>
            <input asp-for="Genero" class="form-control" value="@ViewBag.MiArray[0][4]" placeholder="Ingrese el genero">
            <span asp-validation-for="Genero" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Direccion" class="form-label">Dirección</label>
            <input asp-for="Direccion" class="form-control" value="@ViewBag.MiArray[0][5]" placeholder="Ingrese la dirección">
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" value="@ViewBag.MiArray[0][6]" placeholder="Ingrese el teléfono">
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn bg-secondary float-end text-white" asp-controller="Paciente" asp-action="Pacientes">Regresar</a>
    </form>
</div>
